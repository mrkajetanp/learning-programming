my = stdev(dtb_y, length)
dtb_c = correlation(dtb_x, dtb_y, length)
dtb_slope = dtb_c * (my / mx)
inter = dtb_y_ - dtb_slope * dtb_x_
reg_trend = dtb_x * dtb_slope + inter
